{
    "name": "vencord",
    "version": "1.0.0",
    "private": "true",
    "description": "A Discord client mod that does things differently",
    "keywords": [],
    "homepage": "https://github.com/Vendicated/Vencord#readme",
    "bugs": {
        "url": "https://github.com/Vendicated/Vencord/issues"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/Vendicated/Vencord.git"
    },
    "license": "GPL-3.0",
    "author": "Vendicated",
    "directories": {
        "doc": "docs"
    },
    "scripts": {
        "build": "node scripts/build/build.mjs",
        "build:watch": "pmpm build --watch",
        "buildWeb": "node --require=./scripts/suppressExperimentalWarnings.js scripts/build/buildWeb.mjs",
        "buildWeb:watch": "pnpm buildWeb --watch",
        "buildWeb:zip": "pnpm buildWeb --zip",
        "chrome:run": "web-ext run --target chromium",
        "chrome:watch": "node scripts/concurrently.mjs 'pnpm buildWeb:watch' 'pnpm chrome:run'",
        "firefox:run": "web-ext run --target firefox-desktop",
        "firefox:sign": "web-ext sign",
        "firefox:watch": "node scripts/concurrently.mjs 'pnpm buildWeb:watch' 'pnpm firefox:run'",
        "inject": "node scripts/patcher/install.js",
        "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
        "lint:fix": "pnpm lint --fix",
        "test": "pnpm lint && pnpm build && pnpm testTsc",
        "testTsc": "tsc --noEmit",
        "uninject": "node scripts/patcher/uninstall.js",
        "watch": "pnpm build:watch"
    },
    "dependencies": {
        "diff": "^5.1.0",
        "fflate": "^0.7.4"
    },
    "devDependencies": {
        "@types/diff": "^5.0.2",
        "@types/node": "^18.7.13",
        "@types/react": "^18.0.17",
        "@types/react-dom": "^18.0.8",
        "@types/yazl": "^2.4.2",
        "@typescript-eslint/eslint-plugin": "^5.42.1",
        "@typescript-eslint/parser": "^5.39.0",
        "console-menu": "^0.1.0",
        "discord-types": "^1.3.26",
        "esbuild": "^0.15.5",
        "eslint": "^8.24.0",
        "eslint-plugin-header": "^3.1.1",
        "eslint-plugin-simple-import-sort": "^8.0.0",
        "eslint-plugin-unused-imports": "^2.0.0",
        "puppeteer-core": "^19.2.2",
        "standalone-electron-types": "^1.0.0",
        "type-fest": "^3.1.0",
        "typescript": "^4.8.4",
        "web-ext": "^7.2.0"
    },
    "packageManager": "pnpm@7.13.4",
    "webExt": {
        "artifactsDir": "./dist",
        "build": {
            "overwriteDest": true
        },
        "run": {
            "browserConsole": false,
            "startUrl": [
                "https://discord.com"
            ]
        },
        "sourceDir": "./dist/extension-unpacked"
    }
}
