{
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "lib": [
            "DOM",
            "esnext",
            "esnext.array",
            "esnext.asynciterable",
            "esnext.symbol"
        ],
        "module": "commonjs",
        "moduleResolution": "node",
        "strict": true,
        "noImplicitAny": false,
        "target": "ESNEXT",
        // https://esbuild.github.io/api/#jsx-factory
        "jsxFactory": "Bencord.Webpack.Common.React.createElement",
        "jsxFragmentFactory": "Bencord.Webpack.Common.React.Fragment",
        "jsx": "react"
    },
    "include": ["src/**/*"]
}
